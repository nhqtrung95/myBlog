<h1>Edit Post</h1>

<%= form_for :post, url: '/posts/' + @post.id.to_s, method: :patch do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<p>
  <<%= link_to 'Destroy', { action: :destroy, id: @post.id },
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>